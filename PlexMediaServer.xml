<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
    <Beta>False</Beta>
    <Name>plex</Name>
    <Repository>plexinc/pms-docker</Repository>
    <Registry>https://hub.docker.com/r/plexinc/pms-docker/</Registry>
    <Network>host</Network>
    <Shell>sh</Shell>
    <Privileged>false</Privileged>
    <Support>https://forums.plex.tv/categories/docker</Support>
    <Project>https://plex.tv/</Project>
    <Category>MediaServer:Video MediaServer:Music MediaServer:Photos</Category>
    <WebUI>http://[IP]:[PORT:32400]/web</WebUI>>
    <Icon>https://raw.githubusercontent.com/plexinc/pms-docker/master/img/plex-server.png</Icon>
    <Networking>
        <Mode>host</Mode>
        <Publish/>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/plex</HostDir>
            <ContainerDir>/config</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
        <Volume>
            <HostDir>/mnt/user/appdata/plex/transcode</HostDir>
            <ContainerDir>/transcode</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
        <Volume>
            <HostDir>media</HostDir>
            <ContainerDir>/data/media</ContainerDir>
            <Mode>ro</Mode>
        </Volume>
        <Volume>
            <HostDir>nsfw</HostDir>
            <ContainerDir>/data/nsfw</ContainerDir>
            <Mode>ro</Mode>
        </Volume>
    </Data>
    <Environment>
        <Variable>
            <Name>PLEX_CLAIM</Name>
            <Value>Insert Token from https://plex.tv/claim</Value>
            <Mode/>
        </Variable>
        <Variable>
            <Name>PLEX_UID</Name>
            <Value>99</Value>
            <Mode/>
        </Variable>
        <Variable>
            <Name>PLEX_GID</Name>
            <Value>100</Value>
            <Mode/>
        </Variable>
        <Variable>
            <Name>VERSION</Name>
            <Value>latest</Value>
            <Mode/>
        </Variable>
    </Environment>
</Container>