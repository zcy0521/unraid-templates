<?xml version="1.0" encoding="utf-8"?>
<Container>
    <Beta>False</Beta>
    <Name>redis</Name>
    <Repository>redis:latest</Repository>
    <Registry>https://hub.docker.com/_/redis</Registry>
    <Network>bridge</Network>
    <Shell>sh</Shell>
    <Privileged>false</Privileged>
    <PostArgs>redis-server --appendonly yes</PostArgs>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>6379</HostPort>
                <ContainerPort>6379</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/redis/data</HostDir>
            <ContainerDir>/data</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
</Container>