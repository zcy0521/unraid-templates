<?xml version="1.0" encoding="utf-8"?>
<Container>
    <Beta>False</Beta>
    <Name>nginx</Name>
    <Repository>nginx:latest</Repository>
    <Registry>https://hub.docker.com/_/nginx</Registry>
    <Network>bridge</Network>
    <Shell>sh</Shell>
    <Privileged>false</Privileged>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>80</HostPort>
                <ContainerPort>80</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
            <Port>
                <HostPort>443</HostPort>
                <ContainerPort>443</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/nginx/conf/nginx.conf</HostDir>
            <ContainerDir>/etc/nginx/nginx.conf</ContainerDir>
            <Mode>ro</Mode>
        </Volume>
        <Volume>
            <HostDir>/mnt/user/appdata/nginx/cert</HostDir>
            <ContainerDir>/etc/nginx/cert</ContainerDir>
            <Mode>ro</Mode>
        </Volume>
        <Volume>
            <HostDir>/mnt/user/appdata/nginx/html</HostDir>
            <ContainerDir>/usr/share/nginx/html</ContainerDir>
            <Mode>ro</Mode>
        </Volume>
    </Data>
</Container>